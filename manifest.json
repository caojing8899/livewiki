{
  "manifest_version": 2,

  "name": "LiveWiki",
  "description": "Retrieve content of links to other Wikipedia pages.",
  "version": "1.0",
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": ["*://*.wikipedia.org/*"],
      "js": ["livewiki.js"],
      "css": ["src/css/livewiki.css"]
    }
  ]
}
