{
  "manifest_version": 2,

  "name": "LiveWiki",
  "description": "Retrieve content of links to other Wikipedia pages.",
  "version": "1.0",
  "permissions": [
    "activeTab"
  ],
  "icons": {
    "16": "icons/16x16.png",
    "32": "icons/32x32.png",
    "48": "icons/48x48.png",
    "128": "icons/128x128.png"
  },
  "content_scripts": [
    {
      "matches": ["*://*.wikipedia.org/*"],
      "js": ["livewiki.js"],
      "css": ["src/css/livewiki.css"]
    }
  ]
}
